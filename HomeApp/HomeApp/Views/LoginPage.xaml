<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HomeApp.Views"
             xmlns:customStyles="clr-namespace:HomeApp.Infrastructure.Extensions"
             x:Class="HomeApp.Views.LoginPage">
    
    <ContentPage.Content>
        <StackLayout x:Name="stackLayout" VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="HomeApp - Ваш умный дом" 
                   FontSize="Title"
                   Padding="30,10,30,10" 
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"/>
            <Button
                x:Name="loginButton"
                Text="{x:Static local:LoginPage.BUTTON_TEXT}"
                Clicked="Login_Click"
                CornerRadius="{customStyles:ButtonViewExtension ButtonStyle = Round}"/>
            <Label x:Name="errorMessage" FontSize="Small" TextColor="{customStyles:ColorFromRGBExtention Red=201, Green=134, Blue=122}"
                   Padding="30,10,30,10" VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>