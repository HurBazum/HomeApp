<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeApp.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Entry x:Name="registerEntry" Placeholder="enter your e-mail"/>
            <Button x:Name="registerButton" Text="REGISTER" Clicked="RegisterButton_Clicked"/>
            <Label x:Name="errorMessage" TextColor="Red"/>
            <Label x:Name="eventMessage" TextColor="Violet" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>